.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}
/*个人中心的条目布局,全局统一布局  */
.my_item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 17px;
  background: white;
  border-bottom: 1px solid gainsboro;
}
.line_5px {
  height: 15px;
}
.line_8pt {
  height: 8pt;
}
.line_1px {
  height: 1px;
  background: gainsboro
}
.right_arrow {
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  /* margin-left: 66%; */
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
/* 设置背景色为白色 */
.bgw{
  background-color: #fff;
}
/* 上边距为20rpx */
.mt20{
  margin-top: 20rpx;
}
/*上边距为10rpx */
.mt10{
  margin-top: 10rpx;
}
/* 高为10rpx的分隔栏 */
.divider10{
  height: 10rpx;
  background-color:aliceblue;
}
/* 高为20rpx的分隔栏 */
.divider20{
  height: 20rpx;
  background-color:aliceblue;
}
/* 细线竖直边框 */
.bgr{
  position: relative;
}
.bgr::after{
  content: "";
  width: 2rpx;
  height: 100%;
  background-color:aliceblue;
  position: absolute;
  top: 0;
  right: 0;
}
/* 居中封装 */
.center{
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 居中封装 */
.column_center{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
/* 两端对齐封装 */
.space-between{
display: flex;
justify-content: center;
}
/* 单行竖直居中封装 */
.vertical-center{
  display: flex;
  align-items: center;
}
/* 普通横条封装 */
.row70{
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

